<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sam.leceladon_managing_10.Leceladon"
    tools:layout_editor_absoluteY="81dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lib_inv" />
    <EditText
        android:id="@+id/txtlib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:inputType="text"
       />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtlib"
        android:text="@string/Quantite"

        />
        <EditText
            android:id="@+id/txtquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:inputType="numberSigned"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtquan"
        android:text="@string/date_expir"/>
    <EditText
        android:id="@+id/inv_dat_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:layout_below="@+id/textView5"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inv_dat_exp"
        android:text="@string/date_renvo"/>
    <EditText
        android:id="@+id/date_renvou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:layout_below="@+id/textView6"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_renvou"
        android:text="@string/prod_renouv"/>

    <RadioGroup
        android:id="@+id/grp_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:text="@string/oui"
        android:textSize="12dp"
        />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/non"
            android:textSize="12dp" />

    </RadioGroup>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inv_dat_exp"
                android:text="@string/bon_c"/>
            <EditText
                android:id="@+id/bon_cmd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:layout_below="@+id/textView6"
                />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inv_dat_exp"
                android:text="@string/date_cr_p"/>
            <EditText
                android:id="@+id/date_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:layout_below="@+id/textView10"
                />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">
       <Button
           android:id="@+id/btn_valide_nv_inv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/grp_radio"
           android:layout_toRightOf="@id/btn_ann_nv_inv"
           android:text="@string/modifier"/>
       <Button
           android:id="@+id/btn_ann_nv_inv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/grp_radio"
           android:text="@string/annuler"
           />
   </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
